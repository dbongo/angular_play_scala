# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home
GET     /                           controllers.Init.index(any = "none")

# Serve public HTML to Angular
GET     /views/*any                 controllers.Init.loadPublicHTML(any)

# JSON APIs for Angular to call
GET     /api/applicants             controllers.Applicants.index
POST    /api/applicants     		controllers.Applicants.create

#TODO
#GET     /api/applicants/:id		controllers.Applicants.fetch(id: String)
#PUT     /api/applicants/:id		controllers.Applicants.update(id: String)
#DELETE  /api/applicants/:id		controllers.Applicants.delete(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Redirect all unknown routes to the index page
GET     /*any						controllers.Init.index(any)

